{
  "name": "@claudijo/bits-n-pieces",
  "repository": {
    "type": "git",
    "url": "https://github.com/claudijo/bits-n-pieces.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "postinstall": "npm run bootstrap",
    "build": "lerna exec --parallel -- babel --root-mode upward src --out-dir dist --ignore test.js",
    "build:watch": "lerna exec --parallel -- babel --root-mode upward --watch src -d dist --ignore test.js --verbose",
    "test": "jest --coverage --verbose --passWithNoTests",
    "test:watch": "jest --coverage --verbose --watch",
    "publish": "lerna publish",
    "prepublish": "npm run build",
    "lint:js": "eslint . --fix --cache --ignore-path .lintignore",
    "lint:css": "stylelint --fix '**/*.css **/*.scss' --ignore-path .lintignore",
    "lint_use_once_we_have_css": "npm run lint:js && npm run lint:css",
    "lint": "npm run lint:js"
  },
  "precommit": [
    "lint",
    "test"
  ],
  "devDependencies": {
    "@babel/cli": "^7.8.0",
    "@babel/core": "^7.8.0",
    "@babel/plugin-transform-arrow-functions": "^7.8.0",
    "@babel/plugin-transform-runtime": "^7.8.0",
    "@babel/preset-env": "^7.8.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "pre-commit": "^1.2.2",
    "stylelint": "^12.0.1",
    "stylelint-config-standard": "^19.0.0"
  },
  "jest": {
    "resetMocks": true,
    "resetModules": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/*.js",
      "!packages/**/dist/**",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>node_modules/",
      "<rootDir>coverage/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>node_modules/"
    ]
  },
  "license": "MIT"
}
